generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Court {
  id String @id @default(uuid())
  title String
  imageId String
  description String
  address String
  region String

  sports Sport[]
  reservations Reservation[]
}

model Sport {
  id String @id @default(uuid())
  title String

  courts Court[]
}

model Reservation {
  id String @id @default(uuid())
  startTime Float
  endTime Float
  courtId String
  court Court @relation(fields: [courtId], references: [id], onDelete: Cascade)


  @@index([courtId])
}
